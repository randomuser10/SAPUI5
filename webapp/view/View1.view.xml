<mvc:View controllerName="projectapp.projectmds.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="I am view 1">
        <content>
            <Text id="idTxt" text="Welcome to SAPUI5" textAlign="Center" width="100%" class="sapMH1FontSize"></Text>
            <Label id="lbl1" text="Employee Name :" required="true" class="sapUiMediumMarginBegin"></Label>
            <Input id="idInp" maxLength="20" width="30%" class="sapUiTinyMarginBottom"></Input>
            <Button id="idbtn1" type="Emphasized" text="Submit" class="sapUiTinyMarginBegin" press="onSubmt"></Button>
        </content>
        <footer>
            <Bar id="NewBar" >
                <contentRight>
                    <Button text="Press me" id="Buton" press="onPress"></Button>
                </contentRight>
            </Bar>
        </footer>
    </Page>
</mvc:View>